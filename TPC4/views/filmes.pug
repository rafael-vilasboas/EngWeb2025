extends layout

block content
  .w3-card-4
    header.w3-container.w3-blue
      h1(style="display: flex; justify-content: space-between;")= title
        a(href="/filmes/novo").w3-margin-right
          button.w3-button.w3-round.w3-white +
    .w3-container
      table.w3-table-all.w3-hoverable
        tr(style="pointer-events: none")
          th Título
          th Ano
          th Elenco
          th Géneros
          th Ops
        each f in lfilmes
          tr
            td
              a(href="/filme/" + f.id onmouseover="this.style='color: white'" onmouseout="this.style='color: black'")= f.title
            td= f.year
            td
              ul.w3-ul
                each ator in f.cast
                  li
                    a(href="/ator/" + ator onmouseover="this.style='color: white'" onmouseout="this.style='color: black'")= ator
            td
              ul.w3-ul
                each g in f.genres
                  li= g
            td
              a(href="/filmes/editar/" + f.id onmouseover="this.style='color: white'" onmouseout="this.style='color: black'") Editar
            td
              a(href="/filmes/apagar/" + f.id onmouseover="this.style='color: white'" onmouseout="this.style='color: black'") Apagar
